<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E4F2EA"
    tools:context=".Activities.Reservation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:clipChildren="true"
                android:background="@drawable/round">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RESERVATION"
                android:textColor="#043731"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#E0A84F"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"
                        android:src="@drawable/reservation_view"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Bar Area"
                        android:textColor="#043731"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="Online reservation must be made \n24 hours in advance and must be \nconfirmed via email or telephone."
                        android:textColor="#0C383C"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" You can decorate the party area as Per Your Choice"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Get 10% Off on Pre Booking Food on Regular Menu."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" We will Offer You New Menu as per Your Order."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" FREE BOOKINGS"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textMultiLine"
                        android:text=" Kids allowed in only dine-in area"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/loc_black"/>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>